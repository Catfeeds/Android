    android:layout_height="match_parent">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rvClass"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <Button
        android:id="@+id/btnClassAdd"
        android:layout_width="@dimen/x108"
