        android:textColor="@color/white"
        android:textSize="@dimen/x24"
        android:paddingStart="@dimen/x24"
        android:paddingEnd="@dimen/x24"
        android:background="@drawable/my_class_btn_add"
        android:layout_gravity="end|bottom"/>
</FrameLayout>