<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView android:id="@+id/bg"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/mine_bg_img"
        android:layout_marginStart="@dimen/x5"
        android:layout_marginEnd="@dimen/x5"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintDimensionRatio="H,10:4.5"
        />
    <ImageView android:id="@+id/headImg"
        android:layout_width="@dimen/x50"
        android:layout_height="@dimen/x50"
        android:contentDescription="@string/app_name"
        tools:src="@drawable/head_default"
        app:layout_constraintTop_toTopOf="@id/bg"
        app:layout_constraintBottom_toBottomOf="@id/bg"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_bias="0.2"
        />
    <TextView android:id="@+id/name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/y15"
        android:textColor="@color/white"
        android:gravity="center"
        android:textSize="@dimen/tv_normal"
        tools:text="李老师"
        app:layout_constraintTop_toBottomOf="@id/headImg"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />
    <TextView android:id="@+id/bagNumber"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="@dimen/y5"
        android:textColor="@color/white"
        android:gravity="center"
        android:textSize="@dimen/tv_normal"
        tools:text="书包号：1000734"
        app:layout_constraintTop_toBottomOf="@id/name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/bg"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        >
        <ebag.core.widget.drawable.DrawableTextView android:id="@+id/personalInfo"
            style="@style/mine_item_tv"
            android:text="个人信息"
            app:leftDrawable="@drawable/mine_personal_info"
            />
        <ebag.core.widget.drawable.DrawableTextView android:id="@+id/operation"
            style="@style/mine_item_tv"
            android:text="操作指南"
            app:leftDrawable="@drawable/mine_operation"
            />
        <ebag.core.widget.drawable.DrawableTextView android:id="@+id/setting"
            style="@style/mine_item_tv"
            android:text="设置"
            app:leftDrawable="@drawable/mine_setting"
            />
    </LinearLayout>
</android.support.constraint.ConstraintLayout>