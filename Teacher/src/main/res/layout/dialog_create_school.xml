<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/normal_dialog_bg"
    >
    <TextView android:id="@+id/title_tv"
        style="@style/normal_dialog_title"
        />
    <EditText android:id="@+id/countEdit"
        android:layout_width="@dimen/x300"
        android:layout_height="wrap_content"
        android:background="@drawable/edit_bg"
        android:hint="请输入学校名称"
        android:gravity="center"
        android:textColor="@color/tv_normal"
        android:textSize="@dimen/tv_normal"
        tools:text="请输入学校名称请输入学校名称请输入学校名称请输入学校名称请输入学校名称请输入学校名称请输入学校名称请输入学校名称"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/confirmBtn"
        app:layout_constraintVertical_bias="0.5"
        />
    <TextView android:id="@+id/confirmBtn"
        style="@style/normal_dialog_confirm_btn"
        app:layout_constraintBottom_toBottomOf="parent"
        />
</android.support.constraint.ConstraintLayout>