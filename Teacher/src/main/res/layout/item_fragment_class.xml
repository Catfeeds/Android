<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/x5"
    android:layout_marginRight="@dimen/x5"
    >
    <TextView android:id="@+id/class_name_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/tv_normal"
        android:textColor="@color/tv_normal"
        tools:text="四年级一班"
        android:paddingTop="@dimen/y10"
        android:paddingBottom="@dimen/y10"
        android:paddingStart="@dimen/x10"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        />
    <EditText android:id="@+id/class_desc_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/y10"
        android:paddingBottom="@dimen/y10"
        android:paddingStart="@dimen/x10"
        android:gravity="center"
        android:textColor="@color/blue_dark"
        android:textSize="@dimen/tv_normal"
        android:lineSpacingMultiplier="1.5"
        android:background="@null"
        android:textCursorDrawable="@null"
        android:editable="false"
        android:textIsSelectable="true"
        app:layout_constraintTop_toBottomOf="@id/class_name_id"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/white_shadow_bg"
        app:layout_constraintTop_toBottomOf="@id/class_desc_id"
        >
        <android.support.v7.widget.RecyclerView android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/x10"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <TextView android:id="@+id/student_list_btn"
                style="@style/btn_style"
                android:text="班级成员"
                />
            <View
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:background="@color/gray"
                />
            <TextView android:id="@+id/add_teacher_btn"
                style="@style/btn_style"
                android:text="添加老师"
                />
            <View
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:background="@color/gray"
                />
            <TextView android:id="@+id/class_space_btn"
                style="@style/btn_style"
                android:text="班级空间"
                />
        </LinearLayout>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>