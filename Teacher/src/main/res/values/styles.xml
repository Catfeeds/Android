<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimary</item>
    </style>
    <!--Home start-->
    <style name="home_tv_btn">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:background">@drawable/white_shadow_clickable_bg</item>
        <item name="android:textSize">@dimen/tv_normal</item>
        <item name="android:textColor">@color/tv_normal</item>
        <item name="android:gravity">center</item>
        <item name="topDrawableWidth">@dimen/x34</item>
        <item name="topDrawableHeight">@dimen/x34</item>
        <item name="android:paddingTop">@dimen/y10</item>
        <item name="android:paddingBottom">@dimen/y10</item>
    </style>
    <!--Home end-->
    <!--assignment start-->
    <style name="assignment_ll">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:paddingStart">@dimen/x10</item>
        <item name="android:paddingEnd">@dimen/x10</item>
        <item name="android:paddingTop">@dimen/y20</item>
        <item name="android:paddingBottom">@dimen/y20</item>
        <item name="android:background">?attr/selectableItemBackground</item>
    </style>
    <style name="assignment_tv">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/tv_normal</item>
        <item name="android:textColor">@color/tv_normal</item>
    </style>
    <style name="assignment_gray_tv">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">end|center_vertical</item>
        <item name="android:textColor">@color/tv_sub</item>
        <item name="rightDrawable">@drawable/right_arrow</item>
        <item name="android:drawablePadding">@dimen/x10</item>
        <item name="rightDrawableWidth">@dimen/x6</item>
        <item name="rightDrawableHeight">@dimen/x10</item>
    </style>
    <style name="line">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.5dp</item>
        <item name="android:background">@color/gray</item>
    </style>
    <style name="assignment_radio_button">
        <item name="android:layout_width">@dimen/x50</item>
        <item name="android:layout_height">@dimen/y56</item>
        <item name="android:button">@null</item>
        <item name="android:textSize">@dimen/tv_normal</item>
        <item name="android:textColor">@color/assignment_btn_tv</item>
        <item name="android:background">@drawable/assignment_difficulty_bg</item>
        <item name="android:layout_marginRight">@dimen/x5</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="publish_item_tv">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">@dimen/y8</item>
        <item name="android:padding">@dimen/y15</item>
        <item name="android:background">@color/white</item>
        <item name="android:textSize">@dimen/tv_normal</item>
        <item name="android:textColor">@color/tv_normal</item>
        <item name="leftDrawableWidth">@dimen/x16</item>
        <item name="leftDrawableHeight">@dimen/x16</item>
        <item name="android:drawablePadding">@dimen/y15</item>
    </style>
    <style name="publish_item">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">@dimen/y8</item>
        <item name="android:padding">@dimen/y15</item>
        <item name="android:background">@color/white</item>
        <item name="android:gravity">center_vertical</item>
    </style>
    <style name="deadline_btn">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/x32</item>
        <item name="android:layout_marginLeft">@dimen/x10</item>
        <item name="android:textColor">@color/tv_normal</item>
        <item name="android:textSize">@dimen/tv_normal</item>
        <item name="android:button">@null</item>
        <item name="android:drawableLeft">@drawable/assign_deadline_radio_button</item>
        <item name="android:drawablePadding">@dimen/x5</item>
    </style>
    <style name="school_btn">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/y68</item>
        <item name="android:button">@null</item>
        <item name="android:textSize">@dimen/tv_normal</item>
        <item name="android:textColor">@color/assignment_btn_tv</item>
        <item name="android:background">@drawable/assignment_difficulty_bg</item>
        <item name="android:gravity">center</item>
    </style>
    <!--assignment end-->
    <!--question start-->
    <style name="question_top_tv">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:textSize">@dimen/tv_sub</item>
    </style>
    <style name="question_top_line">
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_margin">@dimen/y10</item>
        <item name="android:background">@color/gray</item>
    </style>
    <!--question end-->
    <!--classFragment-->
    <style name="btn_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:paddingTop">@dimen/y10</item>
        <item name="android:paddingBottom">@dimen/y10</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/tv_normal</item>
        <item name="android:textColor">@color/blue</item>
        <item name="android:background">?attr/selectableItemBackground</item>
    </style>
    <style name="space_tv_btn">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">@dimen/y200</item>
        <item name="android:paddingLeft">@dimen/x10</item>
        <item name="android:paddingRight">@dimen/x10</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/white_shadow_clickable_bg</item>
        <item name="android:textColor">@color/blue</item>
        <item name="android:textSize">@dimen/tv_big</item>
        <item name="android:textStyle">bold</item>
        <item name="android:drawablePadding">@dimen/x20</item>
        <item name="leftDrawableWidth">@dimen/x50</item>
        <item name="leftDrawableHeight">@dimen/x50</item>
    </style>
    <!--classFragment-->
</resources>
