<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.SwipeRefreshLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.yzy.ebag.student.MainActivity"
    tools:showIn="@layout/app_bar_main"
    android:id="@+id/refreshLayout"
    >
    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <android.support.constraint.Guideline android:id="@+id/horizontal_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.28"/>
        <android.support.constraint.Guideline android:id="@+id/horizontal_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.62" />
        <!--banner-->
        <com.youth.banner.Banner android:id="@+id/banner"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginBottom="@dimen/y10"
            app:delay_time="4000"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/horizontal_1"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            />
        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@color/white"
            app:layout_constraintTop_toBottomOf="@id/horizontal_1"
            app:layout_constraintBottom_toTopOf="@id/horizontal_2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />
        <ebag.core.widget.drawable.DrawableTextView android:id="@+id/homework"
            style="@style/main_btn"
            android:text="课后作业"
            app:topDrawable="@drawable/main_icon_homework"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/classWork"
            app:layout_constraintTop_toBottomOf="@id/horizontal_1"
            app:layout_constraintBottom_toTopOf="@id/errorQuestion"
            />
        <ebag.core.widget.drawable.DrawableTextView android:id="@+id/classWork"
            style="@style/main_btn"
            android:text="随堂作业"
            app:topDrawable="@drawable/main_icon_classwork"
            app:layout_constraintTop_toBottomOf="@id/horizontal_1"
            app:layout_constraintBottom_toTopOf="@id/errorQuestion"
            app:layout_constraintStart_toEndOf="@id/homework"
            app:layout_constraintEnd_toStartOf="@id/testWork"
            />
        <ebag.core.widget.drawable.DrawableTextView android:id="@+id/testWork"
            style="@style/main_btn"
            android:text="考试试卷"
            app:topDrawable="@drawable/main_icon_test_paper"
            app:layout_constraintTop_toBottomOf="@id/horizontal_1"
            app:layout_constraintBottom_toTopOf="@id/errorQuestion"
            app:layout_constraintStart_toEndOf="@id/classWork"
            app:layout_constraintEnd_toStartOf="@id/myClass"
            />
        <ebag.core.widget.drawable.DrawableTextView android:id="@+id/myClass"
            style="@style/main_btn"
            android:text="我的班级"
            app:topDrawable="@drawable/main_icon_my_class"
            app:layout_constraintTop_toBottomOf="@id/horizontal_1"
            app:layout_constraintBottom_toTopOf="@id/errorQuestion"
            app:layout_constraintStart_toEndOf="@id/testWork"
            app:layout_constraintEnd_toEndOf="parent"
            />
        <ebag.core.widget.drawable.DrawableTextView android:id="@+id/errorQuestion"
            style="@style/main_btn"
            android:text="我的错题"
            app:topDrawable="@drawable/main_icon_error_question"
            app:layout_constraintTop_toBottomOf="@+id/homework"
            app:layout_constraintBottom_toTopOf="@id/horizontal_2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/btnDailyPractice"
            />
        <ebag.core.widget.drawable.DrawableTextView android:id="@+id/btnDailyPractice"
            style="@style/main_btn"
            android:text="学习工具"
            app:topDrawable="@drawable/main_icon_study_tools"
            app:layout_constraintTop_toBottomOf="@+id/homework"
            app:layout_constraintBottom_toTopOf="@id/horizontal_2"
            app:layout_constraintStart_toEndOf="@id/errorQuestion"
            app:layout_constraintEnd_toStartOf="@id/myMission"
            />
        <ebag.core.widget.drawable.DrawableTextView android:id="@+id/myMission"
            style="@style/main_btn"
            android:text="我的任务"
            app:topDrawable="@drawable/main_icon_my_mission"
            app:layout_constraintTop_toBottomOf="@+id/homework"
            app:layout_constraintBottom_toTopOf="@id/horizontal_2"
            app:layout_constraintStart_toEndOf="@id/btnDailyPractice"
            app:layout_constraintEnd_toStartOf="@id/studyBookTv"
            />
        <ebag.core.widget.drawable.DrawableTextView android:id="@+id/studyBookTv"
            style="@style/main_btn"
            android:text="学习课本"
            app:topDrawable="@drawable/main_icon_study_book"
            app:layout_constraintTop_toBottomOf="@+id/homework"
            app:layout_constraintBottom_toTopOf="@id/horizontal_2"
            app:layout_constraintStart_toEndOf="@id/myMission"
            app:layout_constraintEnd_toEndOf="parent"
            />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@color/white"
            app:layout_constraintTop_toBottomOf="@id/horizontal_2"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="@dimen/y10"
            />

        <ebag.core.widget.drawable.DrawableTextView android:id="@+id/tvAnnounceContent"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:textColor="@color/tv_normal"
            android:textSize="@dimen/tv_sub"
            android:singleLine="true"
            android:ellipsize="marquee"
            android:gravity="center_vertical"
            android:layout_marginStart="@dimen/x5"
            android:layout_marginEnd="@dimen/x5"
            android:drawablePadding="@dimen/x5"
            app:leftDrawableWidth="@dimen/x15"
            app:leftDrawableHeight="@dimen/x13"
            app:leftDrawable="@drawable/main_icon_announce"
            app:layout_constraintTop_toTopOf="@id/tvMoreAnnounce"
            app:layout_constraintBottom_toBottomOf="@id/tvMoreAnnounce"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/tvMoreAnnounce"
            />
        <TextView android:id="@+id/tvMoreAnnounce"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="更多公告"
            android:background="@drawable/blue_btn_bg"
            android:textSize="@dimen/tv_normal"
            android:textColor="@color/white"
            android:padding="@dimen/x5"
            android:layout_marginTop="@dimen/y25"
            android:layout_marginEnd="@dimen/x5"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/horizontal_2"
            />
        <TextView android:id="@+id/classSchedule"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="课程表"
            android:gravity="center_vertical"
            android:paddingStart="@dimen/x10"
            android:textSize="@dimen/tv_normal"
            android:textColor="@color/white"
            android:background="@drawable/main_icon_class_schedule"
            android:layout_marginTop="@dimen/y10"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/classMember"
            app:layout_constraintTop_toBottomOf="@id/tvMoreAnnounce"
            app:layout_constraintBottom_toTopOf="@id/studyGroup"
            />
        <TextView android:id="@+id/classMember"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="班级成员"
            android:gravity="center_vertical"
            android:paddingStart="@dimen/x10"
            android:textSize="@dimen/tv_normal"
            android:textColor="@color/white"
            android:background="@drawable/main_icon_classmate"
            app:layout_constraintStart_toEndOf="@id/classSchedule"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/classSchedule"
            app:layout_constraintBottom_toTopOf="@id/studyGroup"
            />
        <TextView android:id="@+id/studyGroup"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="学习小组"
            android:gravity="center_vertical"
            android:paddingStart="@dimen/x10"
            android:textSize="@dimen/tv_normal"
            android:textColor="@color/white"
            android:background="@drawable/main_icon_study_group"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/classSchedule"
            app:layout_constraintBottom_toBottomOf="parent"
            />
    </android.support.constraint.ConstraintLayout>
</android.support.v4.widget.SwipeRefreshLayout>
