<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/white_shadow_bg"
    android:padding="@dimen/x5"
    android:layout_marginLeft="@dimen/x5"
    android:layout_marginRight="@dimen/x5"
    android:layout_marginTop="@dimen/x7"
    android:layout_marginBottom="@dimen/x7"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    
    <ImageView
        android:id="@+id/image"
        android:layout_width="@dimen/x36"
        android:layout_height="@dimen/x37"
        android:src="@drawable/task_labour_icon_task"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/color_edit_color"
        android:textSize="@dimen/tv_big"
        tools:text="打扫卫生"
        android:layout_marginStart="@dimen/x20"
        app:layout_constraintStart_toEndOf="@id/image"/>

    <TextView
        android:id="@+id/content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/color_edit_hint"
        android:layout_marginTop="@dimen/y10"
        android:textSize="@dimen/tv_normal"
        tools:text="记得把自己洗白白哦!!!!!"
        app:layout_constraintStart_toStartOf="@id/title"
        app:layout_constraintTop_toBottomOf="@id/title"/>

    <TextView
        android:id="@+id/time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/color_edit_hint"
        android:layout_marginTop="@dimen/y13"
        android:textSize="@dimen/tv_normal"
        tools:text="2017-12-28"
        app:layout_constraintStart_toStartOf="@id/title"
        app:layout_constraintTop_toBottomOf="@id/content"/>

    <ebag.core.widget.drawable.DrawableTextView
        android:id="@+id/several"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="1遍"
        android:textSize="@dimen/tv_normal"
        android:textColor="#35BD72"
        android:layout_marginStart="@dimen/x10"
        android:drawablePadding="@dimen/y10"
        app:leftDrawable="@drawable/task_labour_icon_several"
        app:leftDrawableHeight="@dimen/x12"
        app:leftDrawableWidth="@dimen/x12"
        app:layout_constraintTop_toTopOf="@id/time"
        app:layout_constraintBaseline_toBaselineOf="@id/time"
        app:layout_constraintStart_toEndOf="@id/time"/>

    <!--<ebag.core.widget.drawable.DrawableTextView-->
