<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.yzy.ebag.teacher.ui.activity.PublishWorkActivity">
    <ebag.hd.widget.TitleBar android:id="@+id/titleBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:rightText="@string/publish"
        />
    <TextView android:id="@+id/publishTime"
        style="@style/publish_item_tv"
        tools:text="布置时间：2018-02-05"
        />
    <TextView android:id="@+id/publishPerson"
        style="@style/publish_item_tv"
        tools:text="布置班级：一年级一班"
        />
    <TextView android:id="@+id/publishContent"
        style="@style/publish_item_tv"
        tools:text="布置内容：2018-02-05"
        />
    <LinearLayout
        style="@style/publish_item"
        android:orientation="horizontal"
        >
        <TextView android:id="@+id/deadTimeTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/assignment_tv"
            android:textSize="@dimen/tv_normal"
            android:text="@string/dead_time"
            />
        <RadioGroup android:id="@+id/deadTimeGroup"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            >
            <RadioButton android:id="@+id/time_a"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:checked="true"
                tools:text="今天内"
                />
            <RadioButton android:id="@+id/time_b"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                tools:text="明天内"
                />
            <RadioButton android:id="@+id/time_c"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                tools:text="三天内"
                />
            <RadioButton android:id="@+id/time_d"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="自定义"
                />
        </RadioGroup>
        <TextView android:id="@+id/dateTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/x5"
            android:layout_marginStart="@dimen/x15"
            android:textSize="@dimen/tv_normal"
            android:textColor="@color/blue"
            android:background="@drawable/gray_rect_stroke"
            tools:text="2018-01-02"
            android:visibility="gone"
            tools:visibility="visible"
            />
        <TextView android:id="@+id/timeTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/x5"
            android:layout_marginStart="@dimen/x15"
            android:textSize="@dimen/tv_normal"
            android:textColor="@color/assignment_tv"
            android:background="@drawable/gray_rect_stroke"
            android:text="23:59"
            android:visibility="gone"
            tools:visibility="visible"
            />
        <EditText android:id="@+id/testTimeEdit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/x10"
            android:background="@drawable/gray_rect_stroke"
            android:padding="@dimen/x5"
            android:maxLength="3"
            android:inputType="number"
            android:text="45"
            android:visibility="gone"
            tools:visibility="visible"
            />
        <TextView android:id="@+id/testTimeTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/x10"
            android:textColor="@color/assignment_tv"
            android:textSize="@dimen/tv_normal"
            android:text="分钟"
            android:visibility="gone"
            tools:visibility="visible"
            />
    </LinearLayout>
    <LinearLayout
        style="@style/publish_item"
        android:orientation="vertical"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" 
            android:textSize="@dimen/tv_normal"
            android:textColor="@color/assignment_tv"
            android:text="@string/work_attention"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="@dimen/y200"
            android:padding="@dimen/x15"
            android:gravity="start"
            android:layout_marginTop="@dimen/y15"
            android:textColor="@color/assignment_tv"
            android:hint="请填写你要发送的注意事项..."
            android:background="@drawable/publish_edit_bg"
            />
    </LinearLayout>
</LinearLayout>
