<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/titleBarView"
        android:layout_width="fill_parent"
        android:layout_height="55dp"
        android:background="#18b167"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/back_text"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:drawableLeft="@drawable/back1"
            android:paddingLeft="24dp"
            android:paddingRight="24dp"
            android:textColor="#FFFFFF"/>

        <TextView
            android:id="@+id/title_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:textSize="28sp"/>

        <TextView
            android:id="@+id/tv_release"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:text="发布"
            android:paddingLeft="24dp"
            android:paddingRight="24dp"
            android:textColor="#ffffff"
            android:textSize="20sp"
            android:visibility="gone"/>

        <ImageView
            android:id="@+id/iv_add"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:paddingLeft="24dp"
            android:paddingRight="24dp"
            android:layout_centerVertical="true"
            android:scaleType="center"
            android:src="@drawable/add_course"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/tv_confirm"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:text="确定"
            android:paddingLeft="24dp"
            android:paddingRight="24dp"
            android:textColor="#ffffff"
            android:textSize="20sp"
            android:visibility="gone"/>

        <LinearLayout
            android:id="@+id/layout_child"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:visibility="gone">

            <TextView
                android:id="@+id/tv_my_child_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="4dp"
                android:drawableLeft="@drawable/default_child_image"
                android:drawablePadding="5dp"
                android:textColor="#ffffff"
                android:textSize="16sp"/>

            <ImageView
                android:id="@+id/image_more"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="4dp"
                android:src="@drawable/icon_more_child"/>
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>