<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/textbook_version_bg"
    >
    <ImageView android:id="@+id/headImg"
        android:layout_width="@dimen/x100"
        android:layout_height="@dimen/x100"
        tools:src="@drawable/head_default"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="@dimen/y20"
        />
    <TextView android:id="@+id/nameTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/tv_normal"
        android:textColor="@color/tv_normal"
        tools:text="小茗同学"
        android:layout_marginTop="@dimen/x15"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/headImg"
        android:layout_marginBottom="@dimen/y20"
        />
    <RadioGroup android:id="@+id/radioGroup"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/nameTv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        >
        <RadioButton android:id="@+id/praiseBtn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:button="@null"
            android:textSize="@dimen/tv_normal"
            android:drawablePadding="@dimen/x15"
            android:text="值得表扬"
            android:background="@drawable/correct_title_tv_bg"
            android:textColor="@color/praise_tv"
            android:drawableLeft="@drawable/icon_performance_praise"
            />
        <RadioButton android:id="@+id/correctionBtn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:button="@null"
            android:textSize="@dimen/tv_normal"
            android:drawablePadding="@dimen/x15"
            android:text="需要改正"
            android:background="@drawable/correct_title_tv_bg"
            android:textColor="@color/correction_tv"
            android:drawableLeft="@drawable/icon_performance_correction"
            />
    </RadioGroup>
    <TextView android:id="@+id/confirmBtn"
        android:layout_width="0dp"
        android:layout_height="@dimen/y75"
        android:background="@drawable/textbook_confirm_bg"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />
    <TextView android:id="@+id/gou"
        android:layout_width="@dimen/x54"
        android:layout_height="@dimen/x40"
        android:background="@drawable/icon_version_gou"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/confirmBtn"
        app:layout_constraintBottom_toBottomOf="parent"
        />
</android.support.constraint.ConstraintLayout>