<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/gray_rect_stroke"
    android:layout_marginLeft="@dimen/x10"
    android:layout_marginRight="@dimen/x10"
    android:layout_marginBottom="@dimen/x10"
    >
    <TextView android:id="@+id/class_name_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/tv_normal"
        android:textColor="@color/title_text_color"
        tools:text="四年级一班"
        android:padding="@dimen/x15"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        />

    <TextView android:id="@+id/student_list_btn"
        style="@style/btn_style"
        android:text="查看学生"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/line1"
        app:layout_constraintEnd_toStartOf="@id/add_teacher_btn"
        />
    <TextView android:id="@+id/add_teacher_btn"
        style="@style/btn_style"
        android:text="@string/add_teacher"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/line1"
        app:layout_constraintEnd_toStartOf="@id/class_space_btn"
        />
    <ebag.hd.widget.drawable.DrawableTextView android:id="@+id/class_space_btn"
        style="@style/btn_style"
        android:text="@string/class_space"
        app:rightDrawable="@drawable/icon_class_space"
        app:rightDrawableWidth="@dimen/x43"
        app:rightDrawableHeight="@dimen/x27"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/line1"
        />
    <View android:id="@+id/line1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray"
        app:layout_constraintTop_toBottomOf="@id/class_name_id"
        />
    <View android:id="@+id/line2"
        android:layout_width="1dp"
        android:layout_height="0dp"
        android:background="@color/gray"
        app:layout_constraintTop_toBottomOf="@id/class_name_id"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.3"
        />
    <EditText android:id="@+id/class_desc_id"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center"
        android:textColor="@color/desc_blue"
        android:textSize="@dimen/tv_normal"
        android:lineSpacingMultiplier="1.5"

        android:background="@null"
        android:textCursorDrawable="@null"
        android:editable="false"
        android:textIsSelectable="true"

        app:layout_constraintTop_toBottomOf="@id/line1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/line2"
        />
    <android.support.v7.widget.RecyclerView android:id="@+id/recyclerView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="@dimen/x15"
        app:layout_constraintStart_toEndOf="@id/line2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/line1"
        app:layout_constraintBottom_toBottomOf="parent"
        />
</android.support.constraint.ConstraintLayout>