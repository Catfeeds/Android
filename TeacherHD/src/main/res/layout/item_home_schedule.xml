<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="@dimen/x140"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/x10"
    android:paddingRight="@dimen/x10"
    >
    <TextView android:id="@+id/subjectTv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        tools:text="语文"
        android:textColor="@color/white"
        android:textSize="@dimen/x20"
        tools:textColor="#000000"
        />
    <ProgressBar android:id="@+id/progress_id"
        android:layout_width="@dimen/x50"
        android:layout_height="@dimen/y100"
        android:layout_marginTop="@dimen/y10"
        android:progressDrawable="@drawable/home_progress_bg"
        android:indeterminateOnly="false"
        android:max="100"
        android:layout_gravity="center_horizontal"
        app:layout_constraintTop_toBottomOf="@id/subjectTv"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />
    <TextView android:id="@+id/numTv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@color/tv_normal"
        tools:text="0/12"
        />
    <TextView android:id="@+id/class_tv_id"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:textColor="@color/tv_normal"
        android:textSize="@dimen/tv_normal"
        android:singleLine="true"
        android:ellipsize="marquee"
        android:marqueeRepeatLimit="marquee_forever"
        tools:text="一年级一班"
        />
</LinearLayout>