<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/x20"
    android:paddingRight="@dimen/x20"
    >
    <TextView android:id="@+id/subjectTv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="语文"
        android:textColor="@color/white"
        android:textSize="@dimen/x20"
        tools:textColor="#000000"
        />
    <ProgressBar android:id="@+id/progress_id"
        android:layout_width="@dimen/x30"
        android:layout_height="@dimen/y100"
        android:layout_marginTop="@dimen/y10"
        android:progressDrawable="@drawable/home_progress_bg"
        android:indeterminateOnly="false"
        android:progress="20"
        app:layout_constraintTop_toBottomOf="@id/subjectTv"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />
    <TextView android:id="@+id/class_tv_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/y10"
        android:maxLines="2"
        android:ellipsize="end"
        android:gravity="center"
        android:text="15/28\n三年级3班"
        android:textColor="@color/colorPrimaryDark"
        app:layout_constraintTop_toBottomOf="@id/progress_id"
        />
</android.support.constraint.ConstraintLayout>