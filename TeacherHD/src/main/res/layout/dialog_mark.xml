<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    >
    <TextView android:id="@+id/title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/x10"
        android:paddingEnd="@dimen/x10"
        android:paddingTop="@dimen/x10"
        android:paddingBottom="@dimen/x10"
        android:textSize="@dimen/title_bar_title_size"
        android:text="学生答案"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />
    <!--<TextView android:id="@+id/commitBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/x10"
        android:paddingEnd="@dimen/x10"
        android:paddingTop="@dimen/y15"
        android:paddingBottom="@dimen/y15"
        android:text="@string/commit"
        android:textSize="@dimen/tv_normal"
        android:textColor="@color/blue"
        app:layout_constraintEnd_toEndOf="parent"
        />-->
    <android.support.v4.widget.NestedScrollView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/y10"
        android:paddingStart="@dimen/x10"
        android:paddingEnd="@dimen/x10"
        android:paddingBottom="@dimen/y10"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/title_tv"
        app:layout_constraintBottom_toTopOf="@id/bottomLayout"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <TextView android:id="@+id/nameAndBagId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/tv_normal"
                android:textColor="@color/tv_normal"
                tools:text="张三  书包号：1000734"
                />
            <TextView android:id="@+id/commitTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/y10"
                android:textSize="@dimen/tv_sub"
                android:textColor="@color/assignment_tv_sub"
                tools:text="提交时间：2018-02-05"
                />
            <TextView android:id="@+id/answerTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/y10"
                android:text="学生答案："
                android:textSize="@dimen/tv_normal"
                android:textColor="@color/tv_normal"
                />
            <TextView android:id="@+id/studentAnswer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/y10"
                android:textSize="@dimen/tv_normal"
                android:textColor="@color/tv_normal"
                />
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
    <android.support.constraint.ConstraintLayout android:id="@+id/bottomLayout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y60"
        android:paddingStart="@dimen/x15"
        android:paddingEnd="@dimen/x15"
        app:layout_constraintBottom_toBottomOf="parent"
        >
        <View android:id="@+id/line"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/gray"
            />
        <EditText android:id="@+id/markEdit"
            android:layout_width="@dimen/x100"
            android:layout_height="@dimen/y45"
            android:background="@drawable/publish_edit_bg"
            android:gravity="center"
            android:maxLength="3"
            android:inputType="number"
            android:hint="评分"
            android:textSize="@dimen/tv_normal"
            android:textColor="@color/blue"
            android:textColorHint="@color/blue"
            app:layout_constraintTop_toBottomOf="@id/line"
            app:layout_constraintBottom_toBottomOf="parent"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginStart="@dimen/x10"
            android:gravity="center"
            android:textColor="@color/tv_normal"
            android:textSize="@dimen/tv_normal"
            android:text="分"
            app:layout_constraintBottom_toBottomOf="@id/markEdit"
            app:layout_constraintStart_toEndOf="@id/markEdit"
            />
        <TextView android:id="@+id/confirmBtn"
            android:layout_width="@dimen/x100"
            android:layout_height="@dimen/y45"
            android:gravity="center"
            android:textSize="@dimen/tv_normal"
            android:textColor="@color/white"
            android:background="@color/blue"
            android:text="提交"
            app:layout_constraintTop_toBottomOf="@id/line"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />
    </android.support.constraint.ConstraintLayout>
</android.support.constraint.ConstraintLayout>
