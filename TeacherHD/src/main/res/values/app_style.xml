<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--首页start-->
    <style name="home_navigation">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:button">@null</item>
        <item name="android:background">@drawable/home_navigation_background</item>
        <item name="android:textColor">@color/home_navigation_text_color</item>
        <item name="android:paddingTop">@dimen/y15</item>
        <item name="android:paddingBottom">@dimen/y15</item>
        <item name="android:drawablePadding">@dimen/y10</item>
        <item name="android:textSize">18sp</item>
    </style>
    <style name="home_tv_btn">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:padding">@dimen/x20</item>
        <item name="android:background">@drawable/home_tv_bg</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:drawablePadding">@dimen/x20</item>
    </style>
    <!--首页end-->
    <!--布置作业start-->
    <style name="assignment_radio_button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/y50</item>
        <item name="android:button">@null</item>
        <item name="android:textSize">@dimen/tv_normal</item>
        <item name="android:textColor">@color/assignment_btn_tv</item>
        <item name="android:background">@drawable/assignment_difficulty_bg</item>
        <item name="android:layout_marginRight">@dimen/x40</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="semester_radio_button">
        <item name="android:layout_width">@dimen/x150</item>
        <item name="android:layout_height">@dimen/y50</item>
        <item name="android:button">@null</item>
        <item name="android:textSize">@dimen/tv_normal</item>
        <item name="android:textColor">@color/semester_tv</item>
        <item name="android:background">@drawable/semester_tv_bg</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginRight">@dimen/x50</item>
    </style>
    <!--布置作业end-->
    <!--班级start-->
    <style name="btn_style">
        <item name="android:layout_width">@dimen/x170</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/x8</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/tv_normal</item>
        <item name="android:textColor">@color/desc_blue</item>
        <item name="android:background">@drawable/clazz_btn_bg</item>
        <item name="android:layout_marginLeft">@dimen/x30</item>
        <item name="android:layout_marginRight">@dimen/x30</item>
    </style>
    <style name="space_tv_btn">
        <item name="android:layout_width">@dimen/x400</item>
        <item name="android:layout_height">@dimen/y140</item>
        <item name="android:paddingLeft">@dimen/x40</item>
        <item name="android:paddingRight">@dimen/x40</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/home_tv_bg</item>
        <item name="android:textColor">@color/desc_blue</item>
        <item name="android:textSize">@dimen/tv_big</item>
        <item name="android:textStyle">bold</item>
        <item name="android:drawablePadding">@dimen/x20</item>
        <item name="leftDrawableWidth">@dimen/x100</item>
        <item name="leftDrawableHeight">@dimen/x100</item>
    </style>
    <!--班级end-->
    <!--我的start-->
    <style name="mine_tv_btn">
        <item name="android:layout_width">@dimen/x370</item>
        <item name="android:layout_height">@dimen/y180</item>
        <item name="android:padding">@dimen/x40</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/home_tv_bg</item>
        <item name="android:textColor">@color/desc_blue</item>
        <item name="android:textSize">@dimen/tv_big</item>
        <item name="android:textStyle">bold</item>
        <item name="android:drawablePadding">@dimen/x20</item>
        <item name="leftDrawableWidth">@dimen/x100</item>
        <item name="leftDrawableHeight">@dimen/x100</item>
    </style>
    <!--我的end-->
    <!--设置-->
    <style name="setting_item">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
</resources>