<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <stroke android:color="@color/desc_blue_dark" android:width="1dp"/>
            <solid android:color="#E6F2FD"/>
            <corners android:radius="@dimen/x10"/>
        </shape>
    </item>
    <item>
        <shape>
            <stroke android:color="@color/desc_blue" android:width="1dp"/>
            <solid android:color="#E6F2FD"/>
            <corners android:radius="@dimen/x10"/>
        </shape>
    </item>
</selector>