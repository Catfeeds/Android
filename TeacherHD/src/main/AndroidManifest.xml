<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.yzy.ebag.teacher">

    <application
        android:name=".base.App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <!-- 图片选择 -->
        <activity
            android:name="com.luck.picture.lib.PictureSelectorActivity"
            android:screenOrientation="landscape"
            tools:replace="android:screenOrientation" />
        <activity
            android:name="com.luck.picture.lib.PicturePreviewActivity"
            android:screenOrientation="landscape"
            tools:replace="android:screenOrientation" />
        <activity android:name=".MainActivity" />
        <activity android:name=".ui.activity.WelcomeActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ui.activity.account.LoginActivity" />
        <activity android:name=".ui.activity.account.ForgetActivity" />
        <activity android:name=".ui.activity.AssignmentActivity" />
        <activity android:name=".ui.activity.SpaceActivity" />
        <activity android:name=".ui.activity.SettingActivity" />
        <activity android:name=".ui.activity.AboutUsActivity" />
        <activity android:name=".ui.activity.PersonalInfoActivity" />
        <activity android:name=".ui.activity.CorrectingActivity" />
        <activity
            android:name=".ui.activity.CreateClassActivity"
            android:windowSoftInputMode="adjustPan|stateHidden" />
        <activity android:name=".ui.activity.SelectSchoolActivity" />
        <activity android:name=".ui.activity.MyCourseActivity" />
        <activity android:name=".ui.activity.NoticeHistoryActivity" />
        <activity
            android:name=".ui.activity.PublishContentActivity"
            android:windowSoftInputMode="adjustPan|stateHidden" />
        <activity android:name=".ui.activity.StudyGroupActivity"></activity>
    </application>

</manifest>