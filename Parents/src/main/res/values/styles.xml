<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="personal_info_ll_btn">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/y120</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:paddingLeft">@dimen/x20</item>
        <item name="android:paddingRight">@dimen/x20</item>
        <item name="android:background">?attr/selectableItemBackground</item>
    </style>

    <style name="personal_info_left_tv">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/tv_normal</item>
        <item name="android:textColor">#717272</item>
    </style>

    <style name="personal_info_line">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.5dp</item>
        <item name="android:background">@color/gray</item>
        <item name="android:layout_marginLeft">@dimen/x15</item>
        <item name="android:layout_marginRight">@dimen/x15</item>
    </style>

    <style name="personal_info_right_tv">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">end|center_vertical</item>
        <item name="rightDrawable">@drawable/right_arrow</item>
        <item name="rightDrawableWidth">@dimen/x8</item>
        <item name="rightDrawableHeight">@dimen/x12</item>
        <item name="android:text">未设置</item>
        <item name="android:textSize">@dimen/tv_sub</item>
        <item name="android:drawablePadding">@dimen/x10</item>
    </style>

    <style name="assignment_ll">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:paddingStart">@dimen/x10</item>
        <item name="android:paddingEnd">@dimen/x10</item>
        <item name="android:paddingTop">@dimen/y20</item>
        <item name="android:paddingBottom">@dimen/y20</item>
        <item name="android:background">?attr/selectableItemBackground</item>
    </style>
    <style name="assignment_tv">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/tv_normal</item>
        <item name="android:textColor">@color/tv_normal</item>
    </style>
    <style name="assignment_gray_tv">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">end|center_vertical</item>
        <item name="android:textColor">@color/tv_sub</item>
        <item name="rightDrawable">@drawable/right_arrow</item>
        <item name="android:drawablePadding">@dimen/x10</item>
        <item name="rightDrawableWidth">@dimen/x6</item>
        <item name="rightDrawableHeight">@dimen/x10</item>
    </style>
    <style name="line">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.5dp</item>
        <item name="android:background">@color/gray</item>
    </style>

    <style name="publish_item_tv">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">@dimen/y8</item>
        <item name="android:padding">@dimen/y15</item>
        <item name="android:background">@color/white</item>
        <item name="android:textSize">@dimen/tv_normal</item>
        <item name="android:textColor">@color/tv_normal</item>
        <item name="leftDrawableWidth">@dimen/x16</item>
        <item name="leftDrawableHeight">@dimen/x16</item>
        <item name="android:drawablePadding">@dimen/y15</item>
    </style>

    <style name="publish_item">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">@dimen/y8</item>
        <item name="android:padding">@dimen/y15</item>
        <item name="android:background">@color/white</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="deadline_btn">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/x32</item>
        <item name="android:layout_marginLeft">@dimen/x10</item>
        <item name="android:textColor">@color/tv_normal</item>
        <item name="android:textSize">@dimen/tv_normal</item>
        <item name="android:button">@null</item>
        <item name="android:drawableLeft">@drawable/assign_deadline_radio_button</item>
        <item name="android:drawablePadding">@dimen/x5</item>
    </style>

    <style name="question_top_tv">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:textSize">@dimen/tv_sub</item>
    </style>

    <style name="question_top_line">
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_margin">@dimen/y10</item>
        <item name="android:background">@color/gray</item>
    </style>

</resources>
