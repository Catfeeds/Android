<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#38000000">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:paddingEnd="@dimen/x10"
        android:paddingStart="@dimen/x10"
        android:layout_marginBottom="@dimen/y10"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/y260"
            android:background="@drawable/main_homework_bcg"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            >


            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:id="@+id/weixin"
                android:drawablePadding="@dimen/x5"
                android:drawableTop="@drawable/icon_home_weixin"
                android:gravity="center_horizontal"
                android:text="微信" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawablePadding="@dimen/x5"
                android:drawableTop="@drawable/icon_home_pengyouquan"
                android:gravity="center_horizontal"
                android:id="@+id/pengyouquan"
                android:text="朋友圈" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:id="@+id/weibo"
                android:drawablePadding="@dimen/x5"
                android:drawableTop="@drawable/icon_home_weibo"
                android:gravity="center_horizontal"
                android:text="微博" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawablePadding="@dimen/x5"
                android:drawableTop="@drawable/icon_home_qq"
                android:gravity="center_horizontal"
                android:id="@+id/qq"
                android:text="QQ" />


        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/y100"
            android:layout_marginTop="@dimen/y10"
            android:background="@drawable/main_homework_bcg"
            android:gravity="center"
            android:id="@+id/cancel_btn"
            android:text="取消"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/x16" />
    </LinearLayout>
</RelativeLayout>