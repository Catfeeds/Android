<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eef0f0"
    android:orientation="vertical">

    <ebag.mobile.widget.TitleBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        app:titleText="添加劳动任务" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/y15"
        android:paddingStart="@dimen/x10"
        android:background="#fff"
        android:text="请选择孩子"
        android:textColor="#000"
        android:textSize="@dimen/tv_normal" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerview"
        android:paddingStart="@dimen/x20"
        android:background="#fff"
        android:paddingTop="@dimen/y30"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/title_edit"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y80"
        android:layout_marginTop="@dimen/y50"
        android:background="#fff"
        android:hint="请输入标题"
        android:maxLength="10"
        android:textSize="12sp"
        android:paddingStart="@dimen/x5" />


    <EditText
        android:id="@+id/target_edit"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y190"
        android:background="@drawable/edit_bcg"
        android:hint="请输入目标内容"
        android:gravity="start"
        android:textSize="12sp"
        android:backgroundTint="#fff"
        android:layout_marginTop="@dimen/y50"
        android:paddingStart="@dimen/x5" />



    <TextView
        android:id="@+id/comfirm_btn"
        android:layout_width="@dimen/x180"
        android:layout_height="@dimen/y80"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/y100"
        android:background="@drawable/blue_btn"
        android:gravity="center"
        android:text="立即发布"
        android:textColor="#fff" />

</LinearLayout>