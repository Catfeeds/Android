<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eef0f0"
    android:orientation="vertical">

    <ebag.mobile.widget.TitleBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        app:titleText="添加劳动任务" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:paddingStart="@dimen/x10"
        android:paddingTop="@dimen/y15"
        android:text="请选择孩子"
        android:textColor="#000"
        android:textSize="@dimen/tv_normal" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:paddingBottom="@dimen/y30"
        android:paddingStart="@dimen/x20"
        android:paddingTop="@dimen/y30" />

    <EditText
        android:id="@+id/title_edit"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y80"
        android:layout_marginTop="@dimen/y50"
        android:background="#fff"
        android:hint="请输入标题"
        android:maxLength="10"
        android:paddingStart="@dimen/x5"
        android:textSize="12sp" />


    <EditText
        android:id="@+id/target_edit"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y190"
        android:layout_marginTop="@dimen/y50"
        android:background="@drawable/edit_bcg"
        android:backgroundTint="#fff"
        android:gravity="start"
        android:hint="请输入目标内容"
        android:paddingStart="@dimen/x5"
        android:textSize="12sp" />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/y30"
        android:paddingStart="@dimen/x5"
        android:text="请输入奖励云币数量"
        android:textColor="@color/black" />

    <View
        android:layout_width="match_parent"
        android:background="@color/black"
        android:layout_height="0.5dp"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/y10"
        android:paddingBottom="@dimen/y10"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        >

        <EditText
            android:layout_width="@dimen/x30"
            android:layout_height="@dimen/x20"
            android:layout_marginStart="@dimen/x10"
            android:maxLines="1"
            android:gravity="center"
            android:ellipsize="end"
            android:hint="0"
            android:id="@+id/yb_award"
            android:background="@drawable/common_white_edittext_bg_radius"
            />

        <TextView
            android:layout_width="wrap_content"
            android:text="个/云币"
            android:layout_marginStart="@dimen/x10"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <TextView
        android:id="@+id/comfirm_btn"
        android:layout_width="@dimen/x180"
        android:layout_height="@dimen/y80"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/y100"
        android:background="@drawable/blue_btn"
        android:gravity="center"
        android:text="立即发布"
        android:textColor="#fff" />

</LinearLayout>