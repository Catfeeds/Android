<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/x508"
    android:layout_height="wrap_content">

    <View
        android:id="@+id/bg"
        android:layout_width="@dimen/x508"
        android:layout_height="@dimen/x455"
        android:background="@drawable/dialog_radius_bg"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageView
        android:id="@+id/imgHead"
        android:layout_width="@dimen/x90"
        android:layout_height="@dimen/x90"
        android:layout_marginTop="@dimen/x20"
        tools:src="@drawable/head_default"
        app:layout_constraintStart_toStartOf="@id/bg"
        app:layout_constraintEnd_toEndOf="@id/bg"
        app:layout_constraintTop_toTopOf="@id/bg" />

    <TextView
        android:id="@+id/tvName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#6E7680"
        android:textSize="@dimen/tv_big"
        android:layout_marginTop="@dimen/x10"
        tools:text="王子文"
        app:layout_constraintTop_toBottomOf="@id/imgHead"
        app:layout_constraintStart_toStartOf="@id/bg"
        app:layout_constraintEnd_toEndOf="@id/bg"/>

    <TextView
        android:id="@+id/tvBaseInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="女  16岁  深圳  龙岗"
        android:layout_marginTop="@dimen/x10"
        app:layout_constraintTop_toBottomOf="@id/tvName"
        app:layout_constraintStart_toStartOf="@id/bg"
        app:layout_constraintEnd_toEndOf="@id/bg"/>

    <TextView
        android:id="@+id/tvYsbCode"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/x40"
        android:layout_marginStart="@dimen/x24"
        android:layout_marginEnd="@dimen/x24"
        android:textSize="@dimen/tv_normal"
        android:textColor="@color/normal_text_color"
        tools:text="书  包  号  1000123"
        app:layout_constraintTop_toBottomOf="@id/tvBaseInfo"
        app:layout_constraintStart_toStartOf="@id/bg"
        app:layout_constraintEnd_toEndOf="@id/bg"/>

    <TextView
        android:id="@+id/tvPhone"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/x10"
        android:layout_marginStart="@dimen/x24"
        android:layout_marginEnd="@dimen/x24"
        android:textSize="@dimen/tv_normal"
        android:textColor="@color/normal_text_color"
        tools:text="电        话  1000123"
        app:layout_constraintTop_toBottomOf="@id/tvYsbCode"
        app:layout_constraintStart_toStartOf="@id/bg"
        app:layout_constraintEnd_toEndOf="@id/bg"/>

    <TextView
        android:id="@+id/school"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/x10"
        android:layout_marginStart="@dimen/x24"
        android:layout_marginEnd="@dimen/x24"
        android:textSize="@dimen/tv_normal"
        android:textColor="@color/normal_text_color"
        tools:text="所在学校  1000123"
        app:layout_constraintTop_toBottomOf="@id/tvPhone"
        app:layout_constraintStart_toStartOf="@id/bg"
        app:layout_constraintEnd_toEndOf="@id/bg"/>
    <View
        android:id="@+id/btnClose"
        android:layout_width="@dimen/x58"
        android:layout_height="@dimen/x58"
        android:background="@drawable/my_class_dialog_close"
        app:layout_constraintEnd_toEndOf="@id/bg"
        app:layout_constraintTop_toTopOf="@+id/bg" />


</android.support.constraint.ConstraintLayout>