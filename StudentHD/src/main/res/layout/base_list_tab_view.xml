<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View android:id="@+id/tagView"
        android:layout_width="@dimen/x174"
        android:layout_height="1px"/>
    <TextView
        android:id="@+id/tvTag"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x60"
        android:textSize="@dimen/x32"
        android:textColor="#4a4a4a"
        android:gravity="center"
        android:background="@color/white"
        android:layout_alignEnd="@id/tagView"
        android:visibility="gone"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:layout_below="@id/tvTag"
        android:layout_alignEnd="@id/tagView"/>

    <View
        android:id="@+id/line"
        android:layout_width="@dimen/x1"
        android:layout_height="match_parent"
        android:background="@color/login_line"
        android:layout_toEndOf="@id/tagView"/>

    <ebag.core.widget.empty.NoScrollViewPager
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toEndOf="@+id/line"/>

    <ebag.core.widget.empty.StateView
        android:id="@+id/stateView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</RelativeLayout>