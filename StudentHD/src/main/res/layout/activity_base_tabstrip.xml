<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:orientation="vertical">
    <ebag.hd.widget.drawable.TitleBar
        android:id="@+id/titleView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:titleText="@string/setting_about_us"/>

    <android.support.design.widget.TabLayout
        android:id="@+id/mTabs"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y68"
        android:background="@color/white"
        android:fillViewport="false"
        app:tabIndicatorColor="@color/color_tab_indicator"
        app:tabIndicatorHeight="2dp"
        app:tabSelectedTextColor="@color/color_tab_selected_text"
        app:tabTextColor="@color/color_tab_text"
        app:tabTextAppearance="@style/baseTabText"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/x1"
        android:background="#e9e9e9"/>
    <android.support.v4.view.ViewPager
        android:id="@+id/tabsContent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</LinearLayout>