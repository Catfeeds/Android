<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ebag.hd.widget.TitleBar
        android:id="@+id/titleBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:titleText="学习总结"
        app:rightText="完成"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y80"
        android:paddingStart="@dimen/x24"
        android:paddingEnd="@dimen/x24"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@color/white">
        
        <TextView
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#4a4a4a"
            android:textSize="@dimen/x30"
            tools:text="2017年12月12日"
            />

        <TextView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#4a4a4a"
            android:textSize="@dimen/x30"
            android:paddingStart="@dimen/x20"
            android:paddingEnd="@dimen/x60"
            tools:text="14:35"/>

        <TextView
            android:id="@+id/score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ff890a"
            android:textSize="@dimen/x40"
            tools:text="68"/>
        
    </LinearLayout>

    <EditText
        android:id="@+id/editText"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/x24"
        android:layout_marginTop="@dimen/x20"
        android:background="@color/white"
        android:gravity="top|start"
        android:textSize="@dimen/x24"
        android:textColor="#4a4a4a"
        android:textColorHint="@color/color_edit_hint"
        android:hint="快来写点阶段总结吧"/>

</LinearLayout>