<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/x188"
    android:elevation="@dimen/x3"
    app:cardCornerRadius="5dp"
    app:cardUseCompatPadding="true"
    app:contentPadding="3dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/clazz_head"
            android:layout_width="@dimen/x88"
            android:layout_height="@dimen/x88"
            android:layout_centerInParent="true"
            android:src="@drawable/home_photos" />


        <TextView
            android:id="@+id/clazz_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/clazz_head"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/y18"
            android:text="凯莉"
            android:textSize="@dimen/x16" />


    </RelativeLayout>


</android.support.v7.widget.CardView>