<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:background="@drawable/loading_dialog_bg"
    android:padding="15dp"
    >
    <ImageView android:id="@+id/loadingImg"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:background="@drawable/progressbar"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />
    <android.support.v7.widget.AppCompatTextView android:id="@+id/loadingTv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/listview_loading"
        android:textColor="#FFFFFF"
        app:layout_constraintTop_toBottomOf="@id/loadingImg"
        />
</android.support.constraint.ConstraintLayout>