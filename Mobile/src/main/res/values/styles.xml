        <item name="progress">80</item>
        <item name="roundWidth">@dimen/x2</item>
    </style>
    <style name="report_score_tv">
        <item name="android:layout_width">@dimen/x70</item>
        <item name="android:layout_height">@dimen/x70</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">#181818</item>
        <item name="android:textSize">@dimen/tv_big</item>
        <item name="android:includeFontPadding">false</item>
    </style>
    <!--work_report-->
</resources>