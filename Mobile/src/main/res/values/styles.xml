<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--登录注册 忘记密码 相关-->
    <style name="loginWith">
        <item name="android:layout_width">@dimen/x250</item>
    </style>

    <style name="forgetHeight">
        <item name="android:layout_height">@dimen/y68</item>
        <item name="android:layout_width">@dimen/x400</item>
    </style>

    <style name="registerHeight">
        <item name="android:layout_height">@dimen/y100</item>
    </style>

    <style name="loginHeight">
        <item name="android:layout_height">@dimen/y100</item>
    </style>

    <style name="register_edit_text" parent="registerHeight">
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@drawable/login_edit_bac</item>
        <item name="android:drawablePadding">@dimen/x10</item>
        <item name="android:textSize">@dimen/tv_normal</item>
        <item name="android:gravity">center|left</item>
        <item name="android:paddingStart">@dimen/x10</item>
        <item name="android:paddingEnd">@dimen/x10</item>
        <item name="android:textColor">@color/color_edit_color</item>
        <item name="android:textColorHint">@color/color_edit_hint</item>
    </style>

    <style name="login_edit_text" parent="loginHeight">
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@drawable/login_edit_bac</item>
        <item name="android:drawablePadding">@dimen/x10</item>
        <item name="android:textSize">@dimen/tv_normal</item>
        <item name="android:gravity">center|left</item>
        <item name="android:paddingStart">@dimen/x10</item>
        <item name="android:paddingEnd">@dimen/x10</item>
        <item name="android:textColor">@color/color_edit_color</item>
        <item name="android:textColorHint">@color/color_edit_hint</item>
    </style>

    <style name="performance_point">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minWidth">@dimen/x14</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/tv_sub</item>
        <item name="android:layout_marginEnd">@dimen/x10</item>
        <item name="android:layout_marginTop">@dimen/y5</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingStart">@dimen/x3</item>
        <item name="android:paddingEnd">@dimen/x3</item>
        <item name="android:paddingTop">@dimen/y1</item>
        <item name="android:paddingBottom">@dimen/y1</item>
    </style>
    <style name="wheel" parent="TextAppearance.AppCompat">
        <item name="itemNumber">5</item>
        <item name="lineColor">#EDEDED</item>
        <item name="lineHeight">1dp</item>
        <item name="noEmpty">true</item>
        <item name="normalTextColor">#C7C7C7</item>
        <item name="normalTextSize">14sp</item>
        <item name="selectTextColor">@color/tv_normal</item>
        <item name="selectedTextSize">22sp</item>
        <item name="unitHeight">50dp</item>
        <item name="maskDarkColor">@color/transparent</item>
        <item name="maskLightColor">@color/transparent</item>
        <item name="isCyclic">false</item>
    </style>
</resources>