<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--登录注册 忘记密码 相关-->
    <style name="loginWith">
        <item name="android:layout_width">@dimen/x250</item>
    </style>

    <style name="forgetHeight">
        <item name="android:layout_height">@dimen/y68</item>
        <item name="android:layout_width">@dimen/x400</item>
    </style>

    <style name="registerHeight">
        <item name="android:layout_height">@dimen/y100</item>
    </style>

    <style name="loginHeight">
        <item name="android:layout_height">@dimen/y100</item>
    </style>

    <style name="register_edit_text" parent="registerHeight">
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@drawable/login_edit_bac</item>
        <item name="android:drawablePadding">@dimen/x10</item>
        <item name="android:textSize">@dimen/tv_normal</item>
        <item name="android:gravity">center|left</item>
        <item name="android:paddingStart">@dimen/x10</item>
        <item name="android:paddingEnd">@dimen/x10</item>
        <item name="android:textColor">@color/color_edit_color</item>
        <item name="android:textColorHint">@color/color_edit_hint</item>
    </style>

    <style name="login_edit_text" parent="loginHeight">
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@drawable/login_edit_bac</item>
        <item name="android:drawablePadding">@dimen/x10</item>
        <item name="android:textSize">@dimen/tv_normal</item>
        <item name="android:gravity">center|left</item>
        <item name="android:paddingStart">@dimen/x10</item>
        <item name="android:paddingEnd">@dimen/x10</item>
        <item name="android:textColor">@color/color_edit_color</item>
        <item name="android:textColorHint">@color/color_edit_hint</item>
    </style>

    <style name="performance_point">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minWidth">@dimen/x14</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/tv_sub</item>
        <item name="android:layout_marginEnd">@dimen/x10</item>
        <item name="android:layout_marginTop">@dimen/y5</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingStart">@dimen/x3</item>
        <item name="android:paddingEnd">@dimen/x3</item>
        <item name="android:paddingTop">@dimen/y1</item>
        <item name="android:paddingBottom">@dimen/y1</item>
    </style>
    <style name="wheel" parent="TextAppearance.AppCompat">
        <item name="itemNumber">5</item>
        <item name="lineColor">#EDEDED</item>
        <item name="lineHeight">1dp</item>
        <item name="noEmpty">true</item>
        <item name="normalTextColor">#C7C7C7</item>
        <item name="normalTextSize">14sp</item>
        <item name="selectTextColor">@color/tv_normal</item>
        <item name="selectedTextSize">22sp</item>
        <item name="unitHeight">50dp</item>
        <item name="maskDarkColor">@color/transparent</item>
        <item name="maskLightColor">@color/transparent</item>
        <item name="isCyclic">false</item>
    </style>

    <style name="ActionSheetDialogStyle" parent="@android:style/Theme.Dialog">

        <!-- 背景透明 -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <!-- 浮于Activity之上 -->
        <item name="android:windowIsFloating">true</item>
        <!-- 边框 -->
        <item name="android:windowFrame">@null</item>
        <!-- Dialog以外的区域模糊效果 -->
        <item name="android:backgroundDimEnabled">true</item>
        <!-- 无标题 -->
        <item name="android:windowNoTitle">true</item>
        <!-- 半透明 -->
        <item name="android:windowIsTranslucent">true</item>
        <!-- Dialog进入及退出动画 -->
        <item name="android:windowAnimationStyle">@style/ActionSheetDialogAnimation</item>
    </style>
    <!-- ActionSheet进出动画 -->
    <style name="ActionSheetDialogAnimation" parent="@android:style/Animation.Dialog">
        <item name="android:windowEnterAnimation">@anim/actionsheet_dialog_in</item>
        <item name="android:windowExitAnimation">@anim/actionsheet_dialog_out</item>
    </style>

    <style name="normal_dialog_title">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/tv_normal</item>
        <item name="android:textSize">@dimen/title_bar_title_size</item>
        <item name="android:padding">@dimen/y20</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="normal_dialog_confirm_btn">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/y90</item>
        <item name="android:background">@drawable/normal_dialog_confirm_bg</item>
        <item name="android:text">确定</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/title_bar_title_size</item>
        <item name="android:gravity">center</item>
    </style>

    <!--
    android:layout_width="@dimen/y200"
                    android:layout_height="0dp"
                    android:gravity="center"
                    android:textColor="#5b626d"
                    android:textSize="@dimen/tv_normal"
                    android:text="第一节"
    -->
    <style name="week_tv">
        <item name="android:layout_width">@dimen/x60</item>
        <item name="android:layout_height">@dimen/y59</item>
        <item name="android:layout_marginEnd">@dimen/x5</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/tv_normal</item>
    </style>
    <style name="clazz_num">
        <item name="android:layout_width">@dimen/x50</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">#5b626d</item>
        <item name="android:textSize">@dimen/tv_normal</item>
    </style>

    <style name="fab_style">
        <item name="rippleColor">@color/ripple</item>
        <item name="backgroundTint">@color/blue</item>
        <item name="android:layout_alignParentEnd">true</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="elevation">6dp</item>
        <item name="borderWidth">0dp</item>
        <item name="pressedTranslationZ">12dp</item>
        <item name="fabSize">normal</item>
        <item name="android:visibility">invisible</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="layout_constraintStart_toStartOf">parent</item>
        <item name="layout_constraintEnd_toEndOf">parent</item>
        <item name="layout_constraintTop_toTopOf">parent</item>
        <item name="layout_constraintBottom_toBottomOf">parent</item>
        <item name="layout_constraintHorizontal_bias">0.98</item>
        <item name="layout_constraintVertical_bias">0.98</item>
    </style>
    <!--课本阅读：画笔调整-->
    <style name="pen_set">
        <item name="android:layout_width">@dimen/x34</item>
        <item name="android:layout_height">@dimen/x34</item>
        <item name="android:button">@null</item>
    </style>

    <style name="book_catalog_anim" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/catalog_popup_in</item>
        <item name="android:windowExitAnimation">@anim/catalog_popup_out</item>
    </style>
    <!--work_report-->
