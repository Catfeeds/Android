<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#fff"
    android:baselineAligned="false"
    android:orientation="vertical"
    android:paddingBottom="8dp"
    android:paddingTop="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <CheckBox
            android:id="@+id/cb_selector"
            android:layout_width="@dimen/x40"
            android:layout_height="@dimen/x40"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/x5"
            android:layout_marginRight="@dimen/x5"
            android:background="@color/transparent" />

        <ImageView
            android:id="@+id/goods_img"
            android:layout_width="@dimen/x60"
            android:layout_height="@dimen/x60"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="@dimen/x10"
            android:scaleType="centerInside"
            tools:src="@drawable/ic_launcher" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/goods_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="4dp"
                android:textColor="#272727"
                android:textSize="14sp"
                tools:text="Onda/昂达 V10 PRO" />

            <TextView
                android:id="@+id/goods_color"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/goods_name"
                android:layout_marginBottom="10dp"
                android:text="颜色：黑色"
                android:textColor="#979797"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/goods_yun_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/goods_color"
                android:layout_marginBottom="10dp"
                android:textColor="#272727"
                android:textSize="12sp"
                tools:text="云币：19999" />

            <TextView
                android:id="@+id/goods_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/goods_yun_price"
                android:layout_marginRight="8dp"
                android:textColor="#f00"
                android:textSize="16sp"
                tools:text="¥ 3099.00" />

            <TextView
                android:id="@+id/goods_old_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/goods_price"
                android:layout_below="@+id/goods_yun_price"
                android:layout_toRightOf="@+id/goods_price"
                android:gravity="center"
                android:textColor="#9b9b9b"
                android:textSize="16sp"
                tools:text="¥7600.00" />
        </RelativeLayout>

    </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:gravity="end"
        android:layout_marginTop="@dimen/y5"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/lower"
            android:layout_width="@dimen/x30"
            android:layout_height="@dimen/x30"
            android:layout_gravity="bottom"
            android:background="@drawable/bg_black_stroke_rectangle_shape"
            android:gravity="center"
            android:text="一"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_num"
            android:layout_width="@dimen/x30"
            android:layout_height="@dimen/x30"
            android:layout_gravity="bottom"
            android:background="@drawable/bg_black_stroke_rectangle_shape"
            android:gravity="center"
            android:text="1"
            android:textSize="14sp" />

        <Button
            android:id="@+id/add"
            android:layout_width="@dimen/x30"
            android:layout_height="@dimen/x30"
            android:layout_gravity="bottom"
            android:background="@drawable/bg_black_stroke_rectangle_shape"
            android:gravity="center"
            android:includeFontPadding="false"
            android:text="+"
            android:textSize="14sp" />
    </LinearLayout>

</LinearLayout>