<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/normal_dialog_bg"
    android:padding="@dimen/x10"
    >
    <TextView android:id="@+id/titleTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/tv_normal"
        android:textColor="@color/tv_normal"
        tools:text="标题"
        android:maxLines="1"
        android:ellipsize="end"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="@id/play_id"
        />
    <LinearLayout
        android:layout_width="@dimen/x180"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/voice_bg"
        android:padding="@dimen/x7"
        android:gravity="center_vertical"
        android:id="@+id/player"
        android:layout_marginTop="@dimen/y10"
        app:layout_constraintTop_toBottomOf="@id/titleTv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        >
    <ImageView android:id="@+id/image_id"
        android:layout_width="@dimen/x30"
        android:layout_height="@dimen/x30"
        android:background="@drawable/voice_anim"
        android:contentDescription="@string/app_name"
        />
    <ProgressBar android:id="@+id/progressBar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y10"
        android:layout_marginLeft="@dimen/x10"
        style="@android:style/Widget.ProgressBar.Horizontal"
        android:progressDrawable="@drawable/voice_progress_drawable"
        />
    </LinearLayout>
</android.support.constraint.ConstraintLayout>