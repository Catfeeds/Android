<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/white_shadow_bg"
    >


    <LinearLayout
        android:layout_width="@dimen/x250"
        android:layout_height="@dimen/y600"
        android:background="#fff"
        android:paddingTop="@dimen/y20"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/clazzmate_iv"
            android:layout_width="@dimen/x80"
            android:layout_height="@dimen/x80"
            android:layout_gravity="center"
            tools:src="@drawable/head_default"
            />

        <TextView
            android:id="@+id/clazzmate_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/y30"
            android:text="王子文"
            android:textSize="@dimen/tv_normal"
            android:textColor="@color/tv_normal"
            />

        <TextView
            android:id="@+id/clazzmate_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/y10"
            android:text="女 16岁 龙岗"
            android:textColor="@color/tv_normal" />
        <android.support.constraint.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            >
            <android.support.constraint.Guideline android:id="@+id/line"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.5"
                />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="end"
                app:layout_constraintEnd_toStartOf="@id/line"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/y10"
                    android:text="书包号："
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/y10"
                    android:text="电话："
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/y10"
                    android:text="所在学校："
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="start"
                app:layout_constraintStart_toEndOf="@id/line"
                >
                <TextView
                    android:id="@+id/clazzmate_bagnum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/y10"
                    tools:text="书包号:123" />

                <TextView
                    android:id="@+id/clazzmate_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/y10"
                    tools:text="电话:123" />

                <TextView
                    android:id="@+id/clazzmate_school"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/y10"
                    tools:text="所在学校:123456465" />
            </LinearLayout>
        </android.support.constraint.ConstraintLayout>
    </LinearLayout>


</FrameLayout>