<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="ebag.mobile">

    <application>
        <activity
            android:name=".module.account.BLoginActivity"
            android:configChanges="screenSize|keyboardHidden|orientation"
            android:screenOrientation="portrait" />
        <activity
            android:name="ebag.core.base.PhotoPreviewActivity"
            android:screenOrientation="portrait"
            tools:replace="android:screenOrientation" />
        <activity
            android:name=".module.account.ProtocolActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".module.clazz.ClazzmateActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".module.clazz.album.PhotoUploadActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".module.clazz.album.AlbumDetailActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".module.clazz.album.AlbumActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".module.clazz.ClassScheduleActivity"
            android:screenOrientation="landscape" />
        <activity
            android:name=".module.book.ReaderActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".module.OfficialAnnounceActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".module.AboutUsActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".module.account.YBCenterActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".module.homework.WorkReportActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name=".module.homework.HomeworkDescActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".module.account.YBChargeActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".module.account.CashierActivity"
            android:screenOrientation="portrait" />

        <activity
            android:name="com.alipay.sdk.app.H5PayActivity"
            android:configChanges="orientation|keyboardHidden|navigation|screenSize"
            android:exported="false"
            android:screenOrientation="behind"
            android:windowSoftInputMode="adjustResize|stateHidden" >
        </activity>
        <activity
            android:name="com.alipay.sdk.app.H5AuthActivity"
            android:configChanges="orientation|keyboardHidden|navigation"
            android:exported="false"
            android:screenOrientation="behind"
            android:windowSoftInputMode="adjustResize|stateHidden" >
        </activity>
        <activity android:name=".module.clazz.ClassMateSubActivity"
            android:screenOrientation="portrait"
            />
        <provider
            android:name="android.support.v4.content.FileProvider"
            android:authorities="${applicationId}.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <!--元数据-->
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths" />
        </provider>
    </application>
</manifest>
