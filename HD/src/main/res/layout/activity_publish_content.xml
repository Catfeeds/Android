<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <ebag.hd.widget.TitleBar android:id="@+id/titleBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/white_clickable_bg"
        android:orientation="vertical"
        android:layout_margin="20dp"
        android:padding="20dp"
        >
        <EditText android:id="@+id/contentEdit"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y200"
            android:gravity="start"
            android:maxLength="200"
            android:textSize="@dimen/x28"
            android:textColor="@color/title_text_color"
            android:hint="@string/input_content"
            android:background="@null"
            />
        <TextView android:id="@+id/numberOfWord"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:textSize="@dimen/x22"
            />
        <android.support.v7.widget.RecyclerView android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</LinearLayout>