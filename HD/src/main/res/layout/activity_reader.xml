<?xml version="1.0" encoding="utf-8"?>
<ebag.hd.widget.ReaderDragLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ebag.hd.activity.ReaderActivity"
    android:id="@+id/rootView"
    >
    <ebag.hd.widget.TitleBar android:id="@+id/titleBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:rightImage="@drawable/icon_catalog"
        app:layout_constraintTop_toTopOf="parent"
        />
    <ebag.hd.widget.PageView android:id="@+id/pageView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/titleBar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />
    <ebag.core.widget.FloatingDragButton android:id="@+id/baseFab"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:src="@drawable/fab_menu_icon"
        style="@style/fab_style"
        android:visibility="visible"
        />
    <android.support.design.widget.FloatingActionButton android:id="@+id/noteBtn"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        style="@style/fab_style"
        android:src="@drawable/fab_note_icon"
        />
    <android.support.design.widget.FloatingActionButton android:id="@+id/clearBtn"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        style="@style/fab_style"
        android:src="@drawable/fab_clear_icon"
        />
    <android.support.design.widget.FloatingActionButton android:id="@+id/eraserBtn"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        style="@style/fab_style"
        android:src="@drawable/fab_eraser_icon"
        />
    <android.support.design.widget.FloatingActionButton android:id="@+id/penBtn"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        style="@style/fab_style"
        android:src="@drawable/fab_pen_icon"
        />
    <android.support.design.widget.FloatingActionButton android:id="@+id/saveBtn"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        style="@style/fab_style"
        android:src="@drawable/fab_save_icon"
        />
    <ebag.core.widget.empty.NoScrollViewPager android:id="@+id/trackPager"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/titleBar"
        app:layout_constraintBottom_toBottomOf="parent"
        />
    <LinearLayout android:id="@+id/penSetLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone"
        tools:visibility="visible"
        android:background="#20000000"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        >
        <RadioGroup android:id="@+id/penColorGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <RadioButton android:id="@+id/penBlack"
                android:checked="true"
                style="@style/pen_set"
                android:background="@drawable/pen_set0"
                />
            <RadioButton android:id="@+id/penBlue"
                style="@style/pen_set"
                android:background="@drawable/pen_set1"
                />
            <RadioButton android:id="@+id/penRed"
                style="@style/pen_set"
                android:background="@drawable/pen_set2"
                />
            <RadioButton android:id="@+id/penOrange"
                style="@style/pen_set"
                android:background="@drawable/pen_set3"
                />
        </RadioGroup>
        <RadioGroup android:id="@+id/penSizeGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <RadioButton android:id="@+id/penSize1"
                android:checked="true"
                style="@style/pen_set"
                android:background="@drawable/pen_set4"
                />
            <RadioButton android:id="@+id/penSize2"
                style="@style/pen_set"
                android:background="@drawable/pen_set5"
                />
            <RadioButton android:id="@+id/penSize3"
                style="@style/pen_set"
                android:background="@drawable/pen_set6"
                />
            <RadioButton android:id="@+id/penSize4"
                style="@style/pen_set"
                android:background="@drawable/pen_set7"
                />
        </RadioGroup>
        <TextView android:id="@+id/hidePenSet"
            android:layout_width="@dimen/x68"
            android:layout_height="@dimen/x68"
            android:background="@drawable/pen_set8"
            />
    </LinearLayout>
    <TextView android:id="@+id/dragView"
        android:layout_width="@dimen/x130"
        android:layout_height="@dimen/x52"
        android:background="@drawable/drag_btn_bg"
        app:layout_constraintBottom_toTopOf="@id/noteLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />
    <FrameLayout android:id="@+id/noteLayout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        >
        <ebag.hd.widget.TitleBar android:id="@+id/noteTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:titleText="笔记本"
            app:rightText="新增"
            />
        <FrameLayout android:id="@+id/noteListLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/title_bar_height"
            />
        <EditText android:id="@+id/noteEdit"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="@dimen/y5"
            android:paddingStart="@dimen/x5"
            android:textSize="@dimen/title_bar_title_sub_size"
            android:textColor="@color/normal_text_color"
            android:layout_marginTop="@dimen/title_bar_height"
            android:gravity="start"
            android:background="@color/white"
            android:visibility="gone"
            />
    </FrameLayout>
</ebag.hd.widget.ReaderDragLayout>
