<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="baseTabText">
        <item name="android:textSize">@dimen/x28</item>
    </style>

    <style name="ActionSheetDialogStyle" parent="@android:style/Theme.Dialog">

        <!-- 背景透明 -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <!-- 浮于Activity之上 -->
        <item name="android:windowIsFloating">true</item>
        <!-- 边框 -->
        <item name="android:windowFrame">@null</item>
        <!-- Dialog以外的区域模糊效果 -->
        <item name="android:backgroundDimEnabled">true</item>
        <!-- 无标题 -->
        <item name="android:windowNoTitle">true</item>
        <!-- 半透明 -->
        <item name="android:windowIsTranslucent">true</item>
        <!-- Dialog进入及退出动画 -->
        <item name="android:windowAnimationStyle">@style/ActionSheetDialogAnimation</item>
    </style>

    <!-- ActionSheet进出动画 -->
    <style name="ActionSheetDialogAnimation" parent="@android:style/Animation.Dialog">
        <item name="android:windowEnterAnimation">@anim/actionsheet_dialog_in</item>
        <item name="android:windowExitAnimation">@anim/actionsheet_dialog_out</item>
    </style>
    <style name="book_catalog_anim" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/catalog_popup_in</item>
        <item name="android:windowExitAnimation">@anim/catalog_popup_out</item>
    </style>

    <style name="MyTabLayoutTextAppearance" parent="TextAppearance.AppCompat">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="offer_gift_img">
        <item name="android:layout_width">@dimen/x70</item>
        <item name="android:layout_height">@dimen/x70</item>
        <item name="android:layout_marginTop">@dimen/y20</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="btn_cut">
        <item name="android:layout_width">@dimen/x40</item>
        <item name="android:layout_height">@dimen/x40</item>
        <item name="android:enabled">false</item>
        <item name="android:background">@drawable/btn_paper_cut_normal</item>
    </style>

    <style name="offer_gift_tv_num">
        <item name="android:layout_width">@dimen/x45</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@drawable/btn_paper_num_normal</item>
        <item name="android:layout_marginLeft">1dp</item>
        <item name="android:layout_marginRight">1dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">14sp</item>
        <item name="android:text">0</item>
    </style>

    <style name="btn_add">
        <item name="android:layout_width">@dimen/x40</item>
        <item name="android:layout_height">@dimen/x40</item>
        <item name="android:background">@drawable/btn_paper_add_normal</item>
    </style>
</resources>